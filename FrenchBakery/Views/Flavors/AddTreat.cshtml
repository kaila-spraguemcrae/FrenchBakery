@{
  Layout = "_Layout";
}

@model FrenchBakery.Models.Flavor;

<h1>Add a Treat for @Html.DisplayFor(model => model.Type)</h1>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <p>
    @Html.Label("Add Treat")
    @Html.DropDownList("TreatId")
  </p>
  <p>
    <input type="submit" value="Save" class="btn btn-dark" />
  </p>
}
  <p>@Html.ActionLink("Back to details", "Details", new { id = Model.FlavorId })</p>