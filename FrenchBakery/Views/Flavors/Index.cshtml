@{
  Layout = "_Layout";
}

@using FrenchBakery.Models;
@model List<FrenchBakery.Models.Flavor>

<h1>Flavors:</h1>
<hr />

@if(@Model.Count == 0)
{
  <h3>no flavors have been added</h3>
}

@foreach (Flavor flavor in Model)
{
    <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
}

<br>
<p>@Html.ActionLink("Add a new Flavor", "Create", "Flavors", null, new { @class="btn btn-light" })</p>