@{
  Layout = "_Layout";
}

@using FrenchBakery.Models;
@model List<FrenchBakery.Models.Flavor>

<br>
<div class="card custom-card">
  <div class="card-header">
    <h1>Flavors:</h1>
  </div>
  <div class="card-body">
    @if(@Model.Count == 0)
    {
      <h3>no flavors have been added</h3>
    }

    @foreach (Flavor flavor in Model)
    {
      <ul class="list-group" align="center">
        <li class="list-group-item list-group-item-action text-dark">@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
      </ul>
    }
  </div>
  @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
  {
  <div class="card-footer">
    @Html.ActionLink("Add a new Flavor", "Create", "Flavors", null, new { @class="btn btn-outline-secondary" })
  </div>
  }
</div>