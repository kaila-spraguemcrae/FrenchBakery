@{
  Layout = "_Layout";
}

@model FrenchBakery.Models.Flavor;

<br>
<div class="card custom-card">
  <div class="card-header">
    <h1 class="display-4">Edit @Html.DisplayFor(model => model.Type)</h1>
  </div>

  @using (Html.BeginForm())
  {
    <div class="card-body">
      <div class="form-group">
        @Html.HiddenFor(model => model.FlavorId)
        
        @Html.Label("Type of Flavor:")
        @Html.TextBoxFor(model => model.Type, new { @class= "form-control" })
      </div>
      <div class="form-group">
        @Html.Label("Description:")
        @Html.TextAreaFor(model => model.Description, new { @class= "form-control" })
      </div>
    </div>
    <div class="card-footer">
      <input type="submit" value="Save" class="btn btn-outline-secondary" />
      @Html.ActionLink("Back to details", "Details", new { id = Model.FlavorId }, new { @class="btn btn-outline-secondary" })
    </div>
  }
</div>