@* @using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager; *@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>French Bakery</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand display-3" href="/"><strong>Pierre's Bakery 🥐</strong><a>
        <ul class="nav mr-auto">
            <li class="nav-item">
                <a class="nav-link text-dark" href="/flavors">Flavor Directory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/treats">Treat Directory</a>
            </li>
        </ul>
        <ul class="nav">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <form method="post" asp-action="logout" asp-controller="account">
                        <button type="submit" class="nav-link btn btn-link text-dark" style="width:auto">Logout @User.Identity.Name</button>
                    </form>
                </li>
            }
            else
            {
            <li class="nav-item">
                <a class="nav-link text-dark" href="/account/register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/account/login">Login</a>
            </li>
            }
        </ul>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>

</html>
