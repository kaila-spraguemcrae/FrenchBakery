@{
  Layout = "_Layout";
}

@using FrenchBakery.Models;
@model List<FrenchBakery.Models.Treat>

<br>
<div class="card custom-card">
  <div class="card-header">
    <h1>Treats:</h1>
  </div>
  <div class="card-body">
    @if(@Model.Count == 0)
    {
      <h3>no treats have been added</h3>
    }

    @foreach (Treat treat in Model)
    {
      <ul class="list-group" align="center">
        <li class="list-group-item list-group-item-action text-dark">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
      </ul>
    }
  </div>
  <div class="card-footer">
    @Html.ActionLink("Add a new Treat", "Create", "Treats", null, new { @class="btn btn-outline-secondary" })
  </div>
</div>


