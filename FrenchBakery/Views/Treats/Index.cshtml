@{
  Layout = "_Layout";
}

@using FrenchBakery.Models;
@model List<FrenchBakery.Models.Treat>

<h1>Treats:</h1>
<hr />

@if(@Model.Count == 0)
{
  <h3>no treats have been added</h3>
}

@foreach (Treat treat in Model)
{
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
}

<br>
<p>@Html.ActionLink("Add a new Treat", "Create", "Treats", new { @class = "btn" })</p>